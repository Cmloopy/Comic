<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.PersonFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_anhdaidien"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/man"
        android:adjustViewBounds="true"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        app:shapeAppearanceOverlay="@style/RoundedImageViewPerson"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsregular"
        android:text="@string/hello"
        android:textSize="15sp"
        android:textColor="@color/text2"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@+id/img_anhdaidien"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_nameUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name_user"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_anhdaidien"
        android:layout_marginStart="20dp"
        android:textSize="20sp"
        android:fontFamily="@font/poppinssemibold"
        android:textColor="@color/text1_1"
        android:layout_marginTop="70dp"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/btn_moreif"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="5dp"
        android:layout_marginStart="335dp"
        android:layout_marginTop="45dp"
        android:src="@drawable/ic_more"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>