<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingTop="7dp"
    android:paddingBottom="5dp"
    android:layout_height="wrap_content">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/name_chap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsmedium"
        android:text="@string/testC"
        android:textColor="@color/text1_1"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/name_chap"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/time_stamp"
            android:textSize="11sp"
            android:fontFamily="@font/poppinsmedium"
            android:textColor="@color/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_05_03_2025"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_sllike"
            android:fontFamily="@font/poppinsmedium"
            android:textColor="@color/text2"
            android:layout_marginStart="10dp"
            android:textSize="11sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_thumb"
            android:text="1234"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_slcm"
            android:drawableStart="@drawable/ic_cmt"
            android:fontFamily="@font/poppinsmedium"
            android:textColor="@color/text2"
            android:drawablePadding="5dp"
            android:textSize="11sp"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="432"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>